{
    "compilerOptions": {
        "module": "CommonJS",
        "outDir": "./dist",
        "target": "ES6",
        "esModuleInterop": true,
        "declaration": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "baseUrl": "./src",
        "paths": {
            "@board/*": ["board/*"],
            "@comment/*": ["comment/*"],
            "@types/*": ["types/*"],
            "@core/*": ["core/*"],
            "@constasnts/*": ["constasnts/*"]
        }
    },
    // "include": ["src/**/*"],
    "include": ["./src/**/*", "__tests__", "test.js"],
    "exclude": ["node_modules", "dist"]
}
